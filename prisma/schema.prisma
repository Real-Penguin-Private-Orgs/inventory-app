datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Item {
    id String @id @default(cuid())
    name String
    company Company @relation(fields: [company_id], references: [id])
    company_id String @unique
    description String @db.Text
    itemImage String
    quantity Int @default(0)
}

model Company {
   id String @id @default(cuid())
   name String
   logo_url String 
   description String @db.Text
   website_url String?
   email String?
   products Item[]
}